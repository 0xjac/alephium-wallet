{
  "name": "alephium-wallet",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "author": "Alephium <info@alephium.org>",
  "main": "public/electron.js",
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && npx electron-builder",
    "extension-build": "rm -rf build; INLINE_RUNTIME_CHUNK=false npm run-script build;  cp public/background.js public/manifest.json build",
    "extension-pack": "rm ../alephium-webextension.zip; npm run-script extension-build && cd build && zip -r ../alephium-webextension.zip *",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^9.3.2",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/node": "^14.17.9",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.12",
    "@types/tinycolor2": "^1.4.3",
    "@types/yaireo__tagify": "^4.6.0",
    "@types/zxcvbn": "^4.4.1",
    "@yaireo/tagify": "^4.6.0",
    "alf-client": "../alephium-js",
    "bip39": "^3.0.3",
    "classnames": "^2.3.1",
    "concurrently": "^6.2.1",
    "dayjs": "^1.10.6",
    "electron": "^7.3.3",
    "electron-builder": "^22.10.5",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unused-imports": "^1.1.3",
    "framer-motion": "^4.1.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.15.30",
    "prettier": "^2.3.2",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-confetti": "^6.0.1",
    "react-dom": "^17.0.2",
    "react-is": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^4.0.1",
    "styled-components": "^5.2.3",
    "tinycolor2": "^1.4.2",
    "type-fest": "^1.4.0",
    "typescript": "^4.3.5",
    "wait-on": "5.3.0",
    "zxcvbn": "^4.4.2"
  },
  "build": {
    "appId": "org.alephium.alephium-webextension",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "category": "Finance",
      "executableName": "alephium",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons/512x512.png"
    },
    "productName": "Alephium",
    "directories": {
      "buildResources": "assets"
    }
  }
}
