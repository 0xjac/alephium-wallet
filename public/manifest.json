{
  "description": "Web Extension for Alephium",
  "manifest_version": 2,
  "name": "alephium",
  "version": "0.3",
  "homepage_url": "https://gitlab.com/alephium/alephium-webextension",
  "icons": {
    "48": "icons/logo-48.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Alephium",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "manifest_version": 2
}
